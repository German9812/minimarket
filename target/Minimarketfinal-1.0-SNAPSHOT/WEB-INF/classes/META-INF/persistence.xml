<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <!-- Define Persistence Unit -->
  <persistence-unit name="MinimarketfinalPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>logica.Administrador</class>
    <class>logica.Carrito</class>
    <class>logica.CategoriaProducto</class>
    <class>logica.Cliente</class>
    <class>logica.Descuento</class>
    <class>logica.DetalleFactura</class>
    <class>logica.Empleado</class>
    <class>logica.Factura</class>
    <class>logica.Horario</class>
    <class>logica.Inventario</class>
    <class>logica.Persona</class>
    <class>logica.Producto</class>
    <class>logica.Proveedor</class>
    <class>logica.Reporte</class>
    <class>logica.Turno</class>
    <class>logica.Usuario</class>
    <class>logica.Venta</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/market_final?serverTimezone=UTC"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="0000"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
